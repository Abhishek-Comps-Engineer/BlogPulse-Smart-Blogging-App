<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/app_blue"/>
            <corners android:radius="@dimen/_24sdp"/>
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/app_dark_blue"/>
            <corners android:radius="@dimen/_24sdp"/>
            <padding
                android:left="@dimen/_16sdp"
                android:top="@dimen/_12sdp"
                android:right="@dimen/_16sdp"
                android:bottom="@dimen/_12sdp" />
        </shape>
    </item>

</selector>
