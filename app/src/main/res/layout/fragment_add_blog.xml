<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_margin="@dimen/_10sdp"
    tools:context=".ui.AddBlogFragment"
    android:layout_height="match_parent">

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Blog Title -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Blog Title"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/app_dark_blue"
                app:hintTextColor="@color/text_dark">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Blog Content -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write your blog here..."
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/app_dark_blue"
                app:hintTextColor="@color/text_dark">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="10"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textColor="@color/app_black"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Publish Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddBlog"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Publish Blog"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/app_white"
                android:backgroundTint="@color/app_dark_blue"
                app:cornerRadius="14dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/fabAi"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="AI"
        android:textStyle="bold"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/app_black"
        android:background="@drawable/bg_ai_circle"
        android:elevation="8dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
